generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://test-user:test-password@127.0.0.1:54Ë›32/warsawjs"
}

model Comment {
  comment String
  userId  Int
  postId  Int
  id      Int    @id @default(autoincrement())
  Post    Post   @relation(fields: [postId], references: [id])
  User    User   @relation(fields: [userId], references: [id])
}

model Post {
  id        Int       @id @default(autoincrement())
  content   String?
  published Boolean   @default(false)
  title     String
  authorId  Int?
  User      User?     @relation(fields: [authorId], references: [id])
  Comment   Comment[]
}

model User {
  email   String    @unique
  id      Int       @id @default(autoincrement())
  name    String?
  Comment Comment[]
  Post    Post[]
}
